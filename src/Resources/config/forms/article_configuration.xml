<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>article_configuration</key>
    <properties>
        <section name="display_options">
            <meta>
                <title>sulu_article_configuration.display_options</title>
            </meta>
            <properties>
                <property name="layout_style" type="single_select" colspan="4">
                    <meta>
                        <title>sulu_article_configuration.layout_style</title>
                    </meta>
                    <params>
                        <param name="default_value" value="default"/>
                        <param name="values" type="collection">
                            <param name="default">
                                <meta>
                                    <title>sulu_article_configuration.layout_style.default</title>
                                </meta>
                            </param>
                            <param name="wide">
                                <meta>
                                    <title>sulu_article_configuration.layout_style.wide</title>
                                </meta>
                            </param>
                            <param name="fullwidth">
                                <meta>
                                    <title>sulu_article_configuration.layout_style.fullwidth</title>
                                </meta>
                            </param>
                            <param name="narrow">
                                <meta>
                                    <title>sulu_article_configuration.layout_style.narrow</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>
                <property name="enable_sidebar" type="checkbox" colspan="4">
                    <meta>
                        <title>sulu_article_configuration.enable_sidebar</title>
                        <info_text>sulu_article_configuration.enable_sidebar.info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
                <property name="sidebar_position" type="single_select" colspan="4"
                          visibleCondition="enable_sidebar == true">
                    <meta>
                        <title>sulu_article_configuration.sidebar_position</title>
                    </meta>
                    <params>
                        <param name="default_value" value="right"/>
                        <param name="values" type="collection">
                            <param name="left">
                                <meta>
                                    <title>sulu_article_configuration.sidebar_position.left</title>
                                </meta>
                            </param>
                            <param name="right">
                                <meta>
                                    <title>sulu_article_configuration.sidebar_position.right</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>
                <property name="show_toc" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.show_toc</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
                <property name="show_reading_time" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.show_reading_time</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
                <property name="show_author_box" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.show_author_box</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
                <property name="show_related" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.show_related</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
            </properties>
        </section>
        <section name="features">
            <meta>
                <title>sulu_article_configuration.features</title>
            </meta>
            <properties>
                <property name="enable_comments" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.enable_comments</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
                <property name="enable_share_buttons" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.enable_share_buttons</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
                <property name="enable_print" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.enable_print</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
                <property name="enable_download_pdf" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.enable_download_pdf</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
            </properties>
        </section>
        <section name="publication_settings">
            <meta>
                <title>sulu_article_configuration.publication_settings</title>
            </meta>
            <properties>
                <property name="is_featured" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.is_featured</title>
                        <info_text>sulu_article_configuration.is_featured.info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
                <property name="is_sticky" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.is_sticky</title>
                        <info_text>sulu_article_configuration.is_sticky.info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
                <property name="hide_from_lists" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.hide_from_lists</title>
                        <info_text>sulu_article_configuration.hide_from_lists.info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
                <property name="hide_publish_date" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.hide_publish_date</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
            </properties>
        </section>
        <section name="styling">
            <meta>
                <title>sulu_article_configuration.styling</title>
            </meta>
            <properties>
                <property name="custom_css_class" type="text_line" colspan="6">
                    <meta>
                        <title>sulu_article_configuration.custom_css_class</title>
                        <info_text>sulu_article_configuration.custom_css_class.info</info_text>
                    </meta>
                </property>
                <property name="header_bg_color" type="color" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.header_bg_color</title>
                    </meta>
                </property>
                <property name="header_text_color" type="single_select" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.header_text_color</title>
                    </meta>
                    <params>
                        <param name="default_value" value="auto"/>
                        <param name="values" type="collection">
                            <param name="auto">
                                <meta>
                                    <title>sulu_article_configuration.header_text_color.auto</title>
                                </meta>
                            </param>
                            <param name="light">
                                <meta>
                                    <title>sulu_article_configuration.header_text_color.light</title>
                                </meta>
                            </param>
                            <param name="dark">
                                <meta>
                                    <title>sulu_article_configuration.header_text_color.dark</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>
        <section name="advanced">
            <meta>
                <title>sulu_article_configuration.advanced</title>
            </meta>
            <properties>
                <property name="custom_template" type="text_line" colspan="6">
                    <meta>
                        <title>sulu_article_configuration.custom_template</title>
                        <info_text>sulu_article_configuration.custom_template.info</info_text>
                    </meta>
                </property>
                <property name="cache_lifetime" type="number" colspan="3">
                    <meta>
                        <title>sulu_article_configuration.cache_lifetime</title>
                    </meta>
                    <params>
                        <param name="min" value="0"/>
                        <param name="default_value" value="86400"/>
                    </params>
                </property>
                <property name="custom_data" type="text_area" colspan="12">
                    <meta>
                        <title>sulu_article_configuration.custom_data</title>
                        <info_text>sulu_article_configuration.custom_data.info</info_text>
                    </meta>
                </property>
            </properties>
        </section>
    </properties>
</form>