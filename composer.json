{
    "name": "manuxi/sulu-article-configuration-bundle",
    "type": "symfony-bundle",
    "description": "Bundle for extended Article Configuration in Sulu",
    "license": "MIT",
    "keywords": [
        "sulu",
        "suluCms",
        "article",
        "configuration"
    ],
    "authors": [
        {
            "name": "Manuel Bertrams",
            "email": "manu@bytefresser.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "doctrine/doctrine-bundle": "^2.13",
        "sulu/sulu": "^3.0"
    },
    "require-dev": {
        "jackalope/jackalope-doctrine-dbal": "^1.3.4",
        "phpunit/phpunit": "9.6",
        "symfony/browser-kit": "^6.2 | ^7.0",
        "symfony/phpunit-bridge": "^6.2 | ^7.0",
        "symfony/console": "^6.2 | ^7.0",
        "phpspec/prophecy": "^1.17",
        "phpspec/prophecy-phpunit": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Manuxi\\SuluArticleConfigurationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Manuxi\\SuluArticleConfigurationBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "phpunit": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true
        }
    }
}